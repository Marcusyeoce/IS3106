<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="PlandrSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/plandrsystem</jta-data-source>
    <class>entity.ArticleEntity</class>
    <class>entity.AttractionEntity</class>
    <class>entity.BookingEntity</class>
    <class>entity.CompanyEntity</class>
    <class>entity.EventEntity</class>
    <class>entity.MemberEntity</class>
    <class>entity.PlaceEntity</class>
    <class>entity.PromotionEntity</class>
    <class>entity.ReviewEntity</class>
    <class>entity.StaffEntity</class>
    <class>entity.TagEntity</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
